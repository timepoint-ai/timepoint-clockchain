# Clockchain API authentication key (required for protected endpoints)
SERVICE_API_KEY=change-me

# Flash service URL (internal Railway URL or localhost for dev)
FLASH_URL=http://timepoint-flash-deploy.railway.internal:8080

# Flash service API key for authenticated calls to Flash
FLASH_SERVICE_KEY=change-me

# Directory for seed data and scene files

# PostgreSQL connection URL (provided automatically by Railway Postgres plugin)
DATABASE_URL=postgresql://postgres:password@localhost:5432/clockchain

DATA_DIR=./data

# Environment: development | staging | production
ENVIRONMENT=development

# Enable debug logging
DEBUG=false

# Port the service listens on
PORT=8080

# OpenRouter API key (used for expander + judge workers)
OPENROUTER_API_KEY=change-me

# OpenRouter model for AI workers (any OpenRouter-supported model)
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Enable automatic timepoint expansion
EXPANSION_ENABLED=false

# Enable daily cron worker
DAILY_CRON_ENABLED=false

# Admin key for privileged operations
ADMIN_KEY=change-me
